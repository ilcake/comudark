<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
 <configuration>
 	<!-- 타입 별칭 설정 -->
 	<typeAliases>
 		<typeAlias type="good.love.music.vo.User" alias="User"/>
 		<typeAlias type="good.love.music.vo.Board" alias="Board"/>
 		<typeAlias type="good.love.music.vo.Files" alias="File"/>
 		<typeAlias type="good.love.music.vo.Reply" alias="Reply"/>
 		<typeAlias type="good.love.music.vo.Like" alias="Like"/>
 		<typeAlias type="good.love.music.vo.Subscribe" alias="Subscribe"/>
 	</typeAliases>
 	
 	<!-- 매퍼 파일 위치 설정 -->
 	<mappers>
		<mapper resource="mappers/userMapper.xml" />
		<mapper resource="mappers/boardMapper.xml" />
		<mapper resource="mappers/fileMapper.xml" />
	</mappers>
 </configuration>